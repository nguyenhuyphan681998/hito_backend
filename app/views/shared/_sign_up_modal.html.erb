<!-- Modal -->
<div class="modal" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="signUpModalCenterTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="signUpModalTitle"><%= t('shared._sign_up_modal.signup') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="signUpForm">
        <div class="modal-body">
          <small class="hidden" id="signUpMessage" style="color: red;"><%= t('shared._sign_up_modal.error_email') %></small>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="signUpLastName"><%= t('shared._sign_up_modal.lastname') %></label>
              <input type="text" class="form-control" id="signUpLastName" placeholder="<%= t('shared._sign_up_modal.enter_lastname') %>" required>
            </div>
            <div class="form-group col-md-6">
              <label for="signUpFirstName"><%= t('shared._sign_up_modal.firstname') %></label>
              <input type="text" class="form-control" id="signUpFirstName" placeholder="<%= t('shared._sign_up_modal.enter_firstname') %>" required>
            </div>
          </div>
          <div class="form-group">
            <label for="signUpEmail"><%= t('shared._sign_up_modal.email_add') %></label>
            <input type="email" class="form-control" id="signUpEmail" aria-describedby="emailHelp"
              placeholder="<%= t('shared._sign_up_modal.enter_email') %>" required>
            <small id="emailHelp" class="form-text text-muted"><%= t('shared._sign_up_modal.note') %></small>
          </div>
          <div class="form-group">
            <label for="signUpPassword"><%= t('shared._sign_up_modal.password') %></label>
            <input type="password" class="form-control" id="signUpPassword" placeholder="<%= t('shared._sign_up_modal.enter_pw') %>" minlength="6"
              required>
            <small id="passwordHelp" class="form-text text-muted"><%= t('shared._sign_up_modal.length') %></small>
          </div>
          <div class="form-group">
            <label for="signUpPassword"><%= t('shared._sign_up_modal.repassword') %></label>
            <input type="password" class="form-control" id="signUpPasswordConf" placeholder="<%= t('shared._sign_up_modal.enter_repw') %>"
              required>
          </div>
        </div>
        <div class="modal-footer">
          <div class="loader hidden" id="signUpLoader"></div>
          <button type="submit" class="btn btn-primary"><%= t('shared._sign_up_modal.signup') %></button>
        </div>
      </form>
    </div>
  </div>
</div>