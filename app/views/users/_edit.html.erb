<!-- Modal -->
<div class="modal" id="editUserModal" tabindex="-1" role="dialog" aria-labelledby="editUserModalCenterTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editUserModalTitle">Chỉnh sửa thông tin</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="editUserForm">
        <div class="modal-body">
          <div class="form-group">
            <label for="editLocation">Địa chỉ</label>
            <input type="text" class="form-control" id="editLocation" aria-describedby="locationHelp"
              placeholder="Nhập địa chỉ" value="<%= @user.location %>" required>
            <small id="locationHelp" class="form-text text-muted">Nhập địa chỉ chính xác giúp Google Maps định vị được bạn.</small>
          </div>
          <div class="form-group">
            <label for="editAbout">Về bản thân</label>
            <textarea rows="5" type="text" class="form-control" id="editAbout"
              placeholder="Nhập giới thiệu về bản thân bạn" required><%= @user.about %></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <div class="loader hidden" id="editUserLoader"></div>
          <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
      </form>
    </div>
  </div>
</div>