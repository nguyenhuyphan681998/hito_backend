<% provide(:title, 'Sign up') %>
<h1><%= t('users.new.signup')%></h1>
<div class="row">
    <div class="col-md-12">
        <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>
        
        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirmation" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "<%= t('users.new.create')%>", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>