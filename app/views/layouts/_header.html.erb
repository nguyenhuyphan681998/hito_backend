<header class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
    <div class="container">
        <%= link_to "Hito", "/", id: "logo", class: "navbar-brand" %>
        <form id="searchForm" class="form-inline my-2 my-lg-0">
            <i class="input-icon fa fa-search"></i>
            <input id="searchString" class="form-control mr-sm-2 search-bar" type="search"
                placeholder="Search" aria-label="Search" autocomplete="off" required>
        </form>
        <ul class="navbar-nav pull-right">
            <% if logged_in? %>
            <%= link_to "Users", "#", class: "nav-link" %>
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                    Account <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li class="dropdown-item"><%= link_to "Profile", current_user %></li>
                    <li class="dropdown-item"><%= link_to "Settings", "#" %></li>
                    <li class="divider"></li>
                    <li class="dropdown-item"><%= link_to "Logout", logout_path, method: "delete" %></li>
                </ul>
            </li>
            <% else %>
            <li class="nav-item"><%= link_to "Log In", login_path, class: "nav-link" %></li>
            <li class="nav-item"><%= link_to "Sign Up", signup_path, class: "nav-link"  %></li>
            <% end %>
        </ul>
    </div>
</header>