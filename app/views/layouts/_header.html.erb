<header class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
    <div class="container">
        <a class="navbar-brand">
            <img src="<%= image_path('hito-logo.png')%>" class="logo">
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <form id="searchForm" class="form-inline my-2 my-lg-0">
                <i class="input-icon fa fa-search"></i>
                <input id="searchString" class="form-control mr-sm-2 search-bar" type="search" placeholder="Search"
                    aria-label="Search" autocomplete="off" required>
            </form>
            <ul class="navbar-nav ml-auto">
                <% if logged_in? %>
                <li class="nav-item"><a class="nav-link" href="#">Test</a></li>
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                        Account <b class="caret"></b>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow-sm">
                        <div class="dropdown-item-container">
                            <%= link_to "Settings", "#", class: "custom-dropdown-item" %>
                            <div class="divider"></div>
                            <%= link_to "Logout", logout_path, method: "delete", class: "custom-dropdown-item" %>
                        </div>
                    </div>
                </li>
                <% else %>
                <li class="nav-item">
                    <a class="nav-link" href="#" data-toggle="modal" data-target="#signUpModal">Đăng ký</a>
                    <%= render 'shared/sign_up_modal' %>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" data-toggle="modal" data-target="#signInModal">Đăng nhập</a>
                    <%= render 'shared/sign_in_modal' %>
                </li>
                <% end %>
            </ul>
        </div>
    </div>
</header>